<Sc_Manager>:
	Sc_Home:
		id: sc_home
		name: "sc_home"

	Sc_Login:
		id: sc_login
		name: "sc_login"

	Sc_Menu:
		id: sc_menu
		name: "sc_menu"

	Sc_ReFundamental:
		id: sc_refundamental
		name: "sc_refundamental"

	Sc_Unidade1:
		id: sc_unidade1
		name: "sc_unidade1"

	Sc_Unidade2:
		id: sc_unidade2
		name: "sc_unidade2"

	Sc_Unidade3:
		id: sc_unidade3
		name: "sc_unidade3"

	Sc_Unidade4:
		id: sc_unidade4
		name: "sc_unidade4"

	Sc_Unidade5:
		id: sc_unidade5
		name: "sc_unidade5"

	Sc_Unidade6:
		id: sc_unidade6
		name: "sc_unidade6"

	Sc_Unidade7:
		id: sc_unidade7
		name: "sc_unidade7"

	Sc_Unidade8:
		id: sc_unidade8
		name: "sc_unidade8"
	Sc_Politica:
		id: sc_politica
		name: "sc_politica"

<Sc_Home>:
	BoxLayout:
		orientation: "vertical"
		BoxLayout:
			orientation: "vertical"
			size_hint_y: 0.2
			Label:
				text: "App CWDA"
				bold: True
				font_size: "48sp"
		BoxLayout:
			orientation: "vertical"
			size_hint_y: 0.2			
			Label:				
				text: "Concise Way to Develop Arithmetics"
				text_size: self.size
				halign: "center"
				valign: "top"
		BoxLayout:
			orientation: "vertical"
			size_hint_y: 0.2
			AnchorLayout:
		        anchor_x: 'center'
		        anchor_y: 'center'
		        Image:
		            source: "data/imagens/icon.png"
		            size_hint: None, None
		            size: 400, 400	
		BoxLayout:
			orientation: "vertical"
			size_hint_y: 0.2
			Label:
				text: "Vamos Estudar e Aprender aqui neste Aplicativo que é \nUm Modo Interessante de Desenvolver Matemática"				
				text_size: self.size
				halign: "center"
				valign: "top"   					
		BoxLayout:
			orientation: "vertical"
			size_hint_y: 0.2
			Button: 
				text: "Continuar"
				on_release: app.root.current = "sc_menu"

<Sc_Login>:
	BoxLayout:
		orientation: "vertical"
		Label:
			text: "Login de Usuário"
			text_size: self.size
			halign: "center"
			bold: True
		Label:
			text: "Usuário ou E-mail"
			text_size: self.size
			halign: "left"
		TextInput:			
			hint_text: "Usuário"			
		Label:
			text: "Senha de Usuário"
			text_size: self.size
			halign: "left"
		TextInput:			
			hint_text: "Senha"
			password: True
			password_mask: "•"
		Button:			
			text: "Fazer Login"
		Button:			
			text: "Alterar Senha"		
		Button:			
			text: "Pular Login"
			on_release:
				app.root.current = "sc_menu"

<Sc_Menu>:
	acc_menu: acc_menu
	BoxLayout:
		orientation: "horizontal"
		Accordion: 
			id: acc_menu
			size_hint: 0.48, 1 
			AccordionItem:				
				BoxLayout:
					orientation: "vertical"
					Button: 
						text: "MENU"
						on_release: 
							app.root.current = "sc_menu"	
							acc_menu.select(acc_menu.children[1]) 						
					Button: 
						text: "INÍCIO"
						on_release: 
							app.root.current = "sc_home"							
					Button: 
						text: "UNIDADES"
						on_release: 
							app.root.current = "sc_menu"
							acc_menu.select(acc_menu.children[1]) 	
					Button: 
						text: "SAIR"
						on_release: 
							app.stop()
			AccordionItem:				
				id: active_accordion
				collapse: True
				ScrollView:
					do_scroll_y: True
					size_hint_y: 1
					BoxLayout:
						orientation: "vertical"
						size_hint:1, None
			            height:500	
			            BoxLayout:
							orientation: "vertical"
							size_hint_y: 0.1        
							Label:
								text: "Sessões de Unidades"
								bold: True					
						BoxLayout:
							orientation: "vertical"
							size_hint_y: 0.8
							
							Button:
								text: "Revisão do ensino fundamental"
								size_hint_y: 0.1
								on_release: app.root.current = "sc_refundamental"
							Button:
								text: "UNIDADE 1: Álgebra (I)"
								size_hint_y: 0.1
								on_release: app.root.current = "sc_unidade1"
							Button:
								text: "UNIDADE 2: Geometria plana"
								size_hint_y: 0.1
								on_release: app.root.current = "sc_unidade2"
							Button:
								text: "UNIDADE 3: Trigonometria"
								size_hint_y: 0.1
								on_release: app.root.current = "sc_unidade3"
							Button:
								text: "UNIDADE 4: Estatística e Matemática financeira"
								size_hint_y: 0.1
								on_release: app.root.current = "sc_unidade4"
							Button:
								text: "UNIDADE 5: Álgebra (II)"
								size_hint_y: 0.1
								on_release: app.root.current = "sc_unidade5"
							Button:
								text: "UNIDADE 6: Geometria espacial"
								size_hint_y: 0.1
								on_release: app.root.current = "sc_unidade6"
							Button:
								text: "UNIDADE 7: Geometria analítica"
								size_hint_y: 0.1
								on_release: app.root.current = "sc_unidade7"
							Button:
								text: "UNIDADE 8: Álgebra (III)"
								size_hint_y: 0.1
								on_release: app.root.current = "sc_unidade8"
						BoxLayout:
							orientation: "horizontal"
							size_hint_y: 0.1
							Button: 
								text: "Voltar ao Menu Principal"
								on_release: app.root.current = "sc_home"
						BoxLayout:
							orientation: "horizontal"
							size_hint_y: 0.1
							Button: 
								text: "Sair da Aplicação"
								on_release: app.stop()
			AccordionItem:				
				BoxLayout:
					orientation: "vertical"
					Button:
						text: "Política de Privacidade"
						on_release: 
							app.root.current = "sc_politica"
					Avaliar_Btn:
						text: "Avaliar esse App"
						
					Button:
						text: "Website do Ziga"
						on_release: 
							app.abrir_link("http://zigamultimedia.tech")
					Button:
						text: "Canal do Ziga"
						on_release: 
							app.abrir_link("https://www.youtube.com/channel/UCK-W5xN2tzIuovZr3DNydgw?sub_confirmation=1")

<Sc_Politica>:
	BoxLayout: 
		orientation: "vertical"
		BoxLayout: 
			orientation: "vertical"
			spacing: "5dp"
			margin: "5dp"
			padding: "5dp"
			ScrollView:
				size_hint: (1, 1)
				do_scroll_x: False
				do_scroll_y: True
				Label:
					text: app.politiva_privacidade					
					text_size: self.size
					halign: 'left'
					valign: 'top'
					size_hint: 1, 3.5
					markup: True
					size: self.texture_size		
		BoxLayout: 
			orientation: "horizontal"
			size_hint_y: 0.2					
			Button:
				text: "Voltar"
				on_release:
					app.root.current = "sc_menu"
			Button:
				text: "Sair"	
				on_release:
					app.stop()		
<Avaliar_Popup>:
	title: "Avalie a Aplicação"
	size_hint_x: 0.95
	size_hint_y: 0.95
	BoxLayout:
		orientation: "vertical"		
		BoxLayout:
			orientation: "vertical"	
			size_hint_y: 0.8
			Label:
				text: "Mostre que você gostou do App."
				bold: True
				halign: "center"
				pos_hint: {"center_x": 0.5, "center_y": 0.5}
				font_size: "20dp"
			Image:
				source: 'data/aplicacao/avaliar.png'
				size: self.texture_size
		BoxLayout:
			orientation: "horizontal"	
			size_hint_y: 0.2		
			Button: 
				text: "Avaliar"
				on_release: root.link_avaliar()
			Button: 
				text: "Voltar"
				on_release: root.dismiss()					
	