<Sc_Manager>:
	Sc_Home:
		id: sc_home
		name: "sc_home"

	Sc_Login:
		id: sc_login
		name: "sc_login"

	Sc_Menu:
		id: sc_menu
		name: "sc_menu"

	Sc_Unidade1:
		id: sc_unidade1
		name: "sc_unidade1"

	Sc_Unidade2:
		id: sc_unidade2
		name: "sc_unidade2"

	Sc_Unidade3:
		id: sc_unidade3
		name: "sc_unidade3"

	Sc_Unidade4:
		id: sc_unidade4
		name: "sc_unidade4"

	Sc_Unidade5:
		id: sc_unidade5
		name: "sc_unidade5"

	Sc_Unidade6:
		id: sc_unidade6
		name: "sc_unidade6"

	Sc_Unidade7:
		id: sc_unidade7
		name: "sc_unidade7"

	Sc_Unidade8:
		id: sc_unidade8
		name: "sc_unidade8"

<Sc_Home>:
	BoxLayout:
		orientation: "vertical"
		BoxLayout:
			orientation: "vertical"
			size_hint_y: 0.2
			Label:
				text: "App CWDA"
				bold: True
				font_size: "48sp"
		BoxLayout:
			orientation: "vertical"
			size_hint_y: 0.2			
			Label:				
				text: "Concise Way to Develop Arithmetics"
				text_size: self.size
				halign: "center"
				valign: "top"
		BoxLayout:
			orientation: "vertical"
			size_hint_y: 0.2
			AnchorLayout:
		        anchor_x: 'center'
		        anchor_y: 'center'
		        Image:
		            source: "data\imagens\icon.png"
		            size_hint: None, None
		            size: 400, 400	
		BoxLayout:
			orientation: "vertical"
			size_hint_y: 0.2
			Label:
				text: "Vamos estudar e aprender neste  programa de estudo aqui um Modo Interessante de Desenvolver Matemática"				
				text_size: self.size
				halign: "center"
				valign: "top"   					
		BoxLayout:
			orientation: "vertical"
			size_hint_y: 0.2
			Button: 
				text: "Continuar"
				on_release: app.root.current = "sc_menu"

<Sc_Login>:
	BoxLayout:
		orientation: "vertical"
		Label:
			text: "Login de Usuário"
			text_size: self.size
			halign: "center"
			bold: True
		Label:
			text: "Usuário ou E-mail"
			text_size: self.size
			halign: "left"
		TextInput:			
			hint_text: "Usuário"			
		Label:
			text: "Senha de Usuário"
			text_size: self.size
			halign: "left"
		TextInput:			
			hint_text: "Senha"
			password: True
			password_mask: "•"
		Button:			
			text: "Fazer Login"
		Button:			
			text: "Alterar Senha"		
		Button:			
			text: "Pular Login"
			on_release:
				app.root.current = "sc_menu"

<Sc_Menu>:
	ScrollView:
		do_scroll_y: True
		size_hint_y: 1
		BoxLayout:
			orientation: "vertical"
			size_hint:1, None
            height:500	
            BoxLayout:
				orientation: "vertical"
				size_hint_y: 0.1        
				Label:
					text: "Sessões de Unidades"
					bold: True					
			BoxLayout:
				orientation: "vertical"
				size_hint_y: 0.8
				Button:
					text: "UNIDADE 1"
					size_hint_y: 0.1
					on_release: app.root.current = "sc_unidade1"
				Button:
					text: "UNIDADE 2"
					size_hint_y: 0.1
					on_release: app.root.current = "sc_unidade2"
				Button:
					text: "UNIDADE 3"
					size_hint_y: 0.1
					on_release: app.root.current = "sc_unidade3"
				Button:
					text: "UNIDADE 4"
					size_hint_y: 0.1
					on_release: app.root.current = "sc_unidade4"
				Button:
					text: "UNIDADE 5"
					size_hint_y: 0.1
					on_release: app.root.current = "sc_unidade5"
				Button:
					text: "UNIDADE 6"
					size_hint_y: 0.1
					on_release: app.root.current = "sc_unidade6"
				Button:
					text: "UNIDADE 7"
					size_hint_y: 0.1
					on_release: app.root.current = "sc_unidade7"
				Button:
					text: "UNIDADE 8"
					size_hint_y: 0.1
					on_release: app.root.current = "sc_unidade8"
			BoxLayout:
				orientation: "horizontal"
				size_hint_y: 0.1
				Button: 
					text: "Sair da Aplicação"
					on_release: app.stop()