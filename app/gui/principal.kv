
<Sc_Manager>:
	Sc_Login:
		id: sc_login
		name: "sc_login"
	Sc_Menu:
		id: sc_menu
		name: "sc_menu"
	Sc_Capitulos:
		id: sc_capitulos
		name: "sc_capitulos"
	

<Sc_Login>:
	BoxLayout:
		orientation: "vertical"
		Label:
			text: "Login de Usuário"
			text_size: self.size
			halign: "center"
			bold: True
		Label:
			text: "Usuário ou E-mail"
			text_size: self.size
			halign: "left"
		TextInput:			
			hint_text: "Usuário"			
		Label:
			text: "Senha de Usuário"
			text_size: self.size
			halign: "left"
		TextInput:			
			hint_text: "Senha"
			password: True
			password_mask: "•"
		Button:			
			text: "Fazer Login"
		Button:			
			text: "Alterar Senha"		
		Button:			
			text: "Pular Login"
			on_release:
				app.root.current = "sc_menu"

<Sc_Menu>:
	ScrollView:
		do_scroll_y: True
		size_hint_y: 1
		BoxLayout:
			orientation: "vertical"
			size_hint:1, None
            height:2000	
            BoxLayout:
				orientation: "vertical"
				size_hint_y: 0.1
        
				Label:
					text: "Capítulos do Livro"
					bold: True	
				
			BoxLayout:
				orientation: "vertical"
				size_hint_y: 0.8
				Button:
					text: "Capítulo 1"

					size_hint_y: 0.1
					on_release: app.root.current = "sc_capitulos"
				Button:
					text: "Capítulo 2"
					size_hint_y: 0.1
					on_release: app.root.current = "sc_capitulos"
				Button:
					text: "Capítulo 3"
					size_hint_y: 0.1
					on_release: app.root.current = "sc_capitulos"
				Button:
					text: "Capítulo 4"
					size_hint_y: 0.1
					on_release: app.root.current = "sc_capitulos"
				Button:
					text: "Capítulo 5"
					size_hint_y: 0.1
					on_release: app.root.current = "sc_capitulos"
			BoxLayout:
				orientation: "horizontal"
				size_hint_y: 0.1
				Button: 
					text: "Sair da Aplicação"
					on_release: app.stop()


	