<Sc_Capitulos>:
	id: sc_capitulos
	name: "sc_capitulos"
	campo_busca: campo_busca
	
	background_color: "#5EE799"
	
	ScrollView:
		do_scroll_y: True
		size_hint_y: 1
		BoxLayout:
			orientation: 'vertical'
			BoxLayout:
				adaptive_height: True
				orientation: "horizontal"
				size_hint_y: 0.2
				
				TextInput:
					id: campo_busca
					hint_text: 'Buscar Exercício'
					on_text: root.buscar_exercicio(campo_busca.text, True)
			BoxLayout:				
				orientation: "vertical"
				size_hint_y: 0.8
				RecycleView:
					id: rv
					key_viewclass: 'viewclass'
					key_size: 'height'
					RecycleBoxLayout:
						padding: dp(10)
						default_size: None, dp(48)
						default_size_hint: 1, None
						size_hint_y: None
						spacing: "5dp"
						height: self.minimum_height
						orientation: 'vertical'

<ExercícioPopup>:
	title: "Detalhes do Exercício"
	id_exercicio: id_exercicio
	txt_enunciado: txt_enunciado
	id: exercicios_popup	
	size_hint_x: 0.95
	size_hint_y: 0.95
	BoxLayout:
		orientation: "vertical"
		BoxLayout:
			orientation: "vertical"
			Label:
				text: "Exercícios Capítulo 1"
				bold: True	
			BoxLayout:
				orientation: "horizontal"
				Button: 
					text: "Voltar ao Menu Principal"
					on_release: 
						app.root.current = "sc_menu"
						exercicios_popup.dismiss()
		BoxLayout:
			orientation: "vertical"
			BoxLayout:
				orientation: "horizontal"
				Button:
					text: "Solução Completa Exercício 1"
					id: txt_enunciado
					size_hint_x: 0.9
				Button:
					text: "ID"
					size_hint_x: 0.1
					id: id_exercicio
			BoxLayout:
				orientation: "horizontal"
				Button:
					text: "SM1"
				Button:
					text: "SM2"
				Button:
					text: "SM3"
				Button:
					text: "SM4"