<ExercicioPopup>:
	title: "Detalhes do Exercício"	
	txt_exercicio: txt_exercicio
	txt_enunciado: txt_enunciado
	id: exercicios_popup	
	size_hint_x: 0.95
	size_hint_y: 0.95
	BoxLayout:
		orientation: "vertical"
		BoxLayout:
			orientation: "vertical"
			size_hint_y: 0.2
			Label:
				text: "Exercícios Propostos"
				bold: True				
			BoxLayout:
				orientation: "horizontal"
				Button: 
					text: "Voltar ao Menu Principal"
					on_release: 
						app.root.current = "sc_menu"
						exercicios_popup.dismiss()
		BoxLayout:
			orientation: "vertical"
			size_hint_y: 0.8
			BoxLayout:
				orientation: "horizontal"
				size_hint_y: 0.5
				Label:
					text: "Solução Completa Exercício 1"
					id: txt_enunciado					
					halign: "left"					
					bold: True
					size_hint_x: 0.2
					size_hint_y: None
					height: self.texture_size[1]
					text_size: self.width, None
			BoxLayout:		        
				orientation: 'vertical'
				ScrollView:						
					ScatterLayout:
					    size: img.size
					    size_hint: (None,None)
					    Image:
					    	id: img
					        source: "data\imagens\img-un1-ex1.png"
							size_hint: None, None
							size: 480, 250 
			BoxLayout:
				orientation: "horizontal"
				size_hint_y: 0.2
				Button:
					text: "Solução Completa Exercício 1"
					id: txt_exercicio								
			BoxLayout:
				orientation: "horizontal"
				size_hint_y: 0.2
				SolucaoM1Button:
					text: "SM1"
				SolucaoM2Button:
					text: "SM2"
				SolucaoM3Button:
					text: "SM3"
				SolucaoM4Button:
					text: "SM4"

<SolucaoM1Popup>:
	id: ex_so_m1
	title: "Solução Exercício 1 Método 1"
	BoxLayout:		        
		orientation: 'vertical'
		BoxLayout:		        
			orientation: 'vertical'
			size_hint_y: 0.1
			Label:
				text: "Solução Exercício 1 pelo Método 1"
		BoxLayout:		        
			orientation: 'vertical'
			size_hint_y: 0.7
			ScrollView:						
				ScatterLayout:
				    size: img.size
				    size_hint: (None,None)
				    Image:
				    	id: img
				        source: "data\imagens\img-un1-so1-m1.png"
						size_hint: None, None
						size: 480, 250 
		BoxLayout:		        
			orientation: 'vertical'
			size_hint_y: 0.1
			Label:
				text: "Resposta: Letra C"
		BoxLayout:
			orientation: "horizontal"
			size_hint_y: 0.1
			Button: 
				text: "Voltar"
				on_release: 					
					ex_so_m1.dismiss()


