<Sc_Unidade1>:
	id: sc_unidade1
	name: "sc_unidade1"
	campo_busca: campo_busca
	background_color: "#5EE799"	
	ScrollView:
		do_scroll_y: True
		size_hint_y: 1
		BoxLayout:
			orientation: 'vertical'
			BoxLayout:				
				orientation: "horizontal"
				size_hint_y: 0.1
				
				Label: 
					text: "Revisão do ensino fundamental"
					halign: "center"
					bold: True
			BoxLayout:
				adaptive_height: True
				orientation: "horizontal"
				size_hint_y: 0.1
				
				TextInput:
					id: campo_busca
					hint_text: 'Buscar Exercício'
					on_text: root.buscar_exercicio(campo_busca.text, True)

			BoxLayout:				
				orientation: "vertical"
				size_hint_y: 0.7

				RecycleView:
					id: rv
					key_viewclass: 'viewclass'
					key_size: 'height'
					RecycleBoxLayout:
						padding: dp(10)
						default_size: None, dp(48)
						default_size_hint: 1, None
						size_hint_y: None
						spacing: "5dp"
						height: self.minimum_height
						orientation: 'vertical'
			BoxLayout:				
				orientation: "vertical"
				size_hint_y: 0.1
				Button: 
					text: "Voltar ao Menu Principal"
					on_release: 
						app.root.current = "sc_menu"

