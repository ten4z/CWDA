<ExercícioPopup>:
	title: "Detalhes do Exercício"	
	txt_exercicio: txt_exercicio
	txt_enunciado: txt_enunciado
	id: exercicios_popup	
	size_hint_x: 0.95
	size_hint_y: 0.95
	BoxLayout:
		orientation: "vertical"
		BoxLayout:
			orientation: "vertical"
			size_hint_y: 0.2
			Label:
				text: "Exercícios Propostos"
				bold: True				
			BoxLayout:
				orientation: "horizontal"
				Button: 
					text: "Voltar ao Menu Principal"
					on_release: 
						app.root.current = "sc_menu"
						exercicios_popup.dismiss()
		BoxLayout:
			orientation: "vertical"
			size_hint_y: 0.8
			BoxLayout:
				orientation: "horizontal"
				size_hint_y: 0.6
				Label:
					text: "Solução Completa Exercício 1"
					id: txt_enunciado					
					halign: "left"					
					bold: True
					size_hint_x: 0.2
					size_hint_y: None
					height: self.texture_size[1]
					text_size: self.width, None
			BoxLayout:
				orientation: "horizontal"
				size_hint_y: 0.2
				Button:
					text: "Solução Completa Exercício 1"
					id: txt_exercicio					
				
				
			BoxLayout:
				orientation: "horizontal"
				size_hint_y: 0.2
				Button:
					text: "SM1"
				Button:
					text: "SM2"
				Button:
					text: "SM3"
				Button:
					text: "SM4"